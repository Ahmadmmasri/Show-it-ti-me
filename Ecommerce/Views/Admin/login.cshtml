@model Ecommerce.Models.tbl_admin
@{
    ViewBag.Title = "login";
}
<style>
    form, input {
        margin: auto;
        text-align: center;
        padding-top: 30px;
    }
</style>

@using (@Html.BeginForm())
{
    <form>
        <div class="form-group">
            <span style="color:red"> @Html.ValidationMessageFor(x => x.ad_user)</span>
            <label for="inputEmail">Email</label>
            @Html.TextBoxFor(x => x.ad_user, new { @class = "form-control", id = "inputName", placeholder = "Name", type = "text" })

        </div>
        <div class="form-group">
            <span style="color:red">@Html.ValidationMessageFor(x => x.ad_password)</span>
            <label for="inputPassword">Password</label>
            @Html.TextBoxFor(x => x.ad_password, new { @class = "form-control", id = "inputPassword", placeholder = "Password", type = "Password" })

        </div>
        <div class="form-group">
            <label class="form-check-label"><input type="checkbox"> Remember me</label>
        </div>
        <p class="text-danger">@ViewBag.message</p>
        <button type="submit" value="Login" class="btn btn-success">Log in</button>
    </form>
}


